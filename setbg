#!/usr/bin/env bash

FILE="$HOME/.config/sway/config"

if [[ $# -eq 0 ]]; then
    sed -n '27p' "$FILE"

elif [[ $# -eq 1 ]]; then
    sed -i "27s/[0-9]\{1,2\}/$1/" "$FILE"
    sed -n '27p' "$FILE"
    
elif [[ $# -ne 3 ]]; then
    echo "Par√¢metros insuficientes"
    exit 1

else
    sed -i "27s/$1/$2/" "$FILE"
    sed -i "27s/[0-9]\{1,2\}/$3/" "$FILE"
    sed -n '27p' "$FILE"
fi
